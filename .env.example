# ----- Application -----
PORT=3000
NODE_ENV=development

# URLs (update for production)
API_URL=http://localhost:3000
FRONTEND_URL=https://optical-frontend-five.vercel.app/

# ----- Database (Supabase PostgreSQL) -----
DATABASE_URL="postgresql://user:password@host:6543/database?pgbouncer=true"
DIRECT_URL="postgresql://user:password@host:5432/database"

# ----- Authentication (JWT) -----
JWT_SECRET="your-secret-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"

# ----- Bling ERP Integration -----
BLING_REDIRECT_URI=http://localhost:3000/api/bling/callback
BLING_API_URL=https://www.bling.com.br/Api/v3

# ----- CloudFlare R2 (Image Storage) -----
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=optical
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-your-public-bucket-url.r2.dev

# ----- Mercado Pago (Payment Processing) -----
MERCADO_PAGO_ACCESS_TOKEN=APP_USR-your-access-token-here

# ----- Correios API (Shipping) -----
# Get credentials from: https://www.correios.com.br
# Sandbox: https://apihom.correios.com.br
# Production: https://api.correios.com.br

# Leave empty to use fallback region-based pricing
CORREIOS_USER=your-correios-username
CORREIOS_TOKEN=your-correios-api-token
CORREIOS_CARTAO=your-cartao-postagem-number
CORREIOS_ORIGIN_CEP=01310100

